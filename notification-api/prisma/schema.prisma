generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model notifications {
  id           Int       @id @default(autoincrement())
  type         enumtype
  title        String    @db.VarChar(40)
  body         String
  subscribers  Decimal[] @db.Decimal
  date_created DateTime  @db.Date
  date_read    DateTime? @db.Date
}

model users {
  id           Int     @id @default(autoincrement())
  userdata     String  @unique
  active_app   Boolean
  active_email Boolean
}

enum enumtype {
  sms
  email
  app
}
